          <span class="season-attr">Data via <a href="http://92.112.126.106/#dashboard" target="_blank" rel="noopener">HoQ Season Tracker</a></span>
        </div>

        <div class="season-grid">
          {seasonStats.career && (
            <div class="season-career">
              <table class="settings-table">
                {seasonStats.career.matches_played != null && (
                  <tr><td>Games</td><td>{seasonStats.career.matches_played}</td></tr>
                )}
                {seasonStats.career.win_rate != null && (
                  <tr><td>Win Rate</td><td>{seasonStats.career.win_rate}%</td></tr>
                )}
                {seasonStats.career.kd_ratio != null && (
                  <tr><td>K/D</td><td>{seasonStats.career.kd_ratio.toFixed(2)}</td></tr>
                )}
                {seasonStats.career.total_kills != null && (
                  <tr><td>Kills</td><td>{seasonStats.career.total_kills}</td></tr>
                )}
                {seasonStats.career.total_deaths != null && (
                  <tr><td>Deaths</td><td>{seasonStats.career.total_deaths}</td></tr>
                )}
                {seasonStats.career.damage_per_minute != null && (
                  <tr><td>DPM</td><td>{Math.round(seasonStats.career.damage_per_minute)}</td></tr>
                )}
                {seasonStats.career.max_streak != null && (
                  <tr><td>Best Streak</td><td>{seasonStats.career.max_streak}</td></tr>
                )}
              </table>
            </div>
          )}

          {seasonStats.weapons?.length > 0 && (
            <div class="season-weapons">
              <h3>Weapon Accuracy (Season)</h3>
              <table class="settings-table">
                {seasonRailgun && (
                  <tr>
                    <td>&#127919; Railgun</td>
                    <td>{seasonRailgun.accuracy}%</td>
                    <td class="text-muted">{seasonRailgun.kills} kills</td>
                  </tr>
                )}
                {seasonRocket && (
                  <tr>
                    <td>&#128640; Rocket</td>
                    <td>{seasonRocket.accuracy}%</td>
                    <td class="text-muted">{seasonRocket.kills} kills</td>
                  </tr>
                )}
                {seasonLightning && (
                  <tr>
                    <td>&#9889; Lightning Gun</td>
                    <td>{seasonLightning.accuracy}%</td>
                    <td class="text-muted">{seasonLightning.kills} kills</td>
                  </tr>
                )}
                {seasonShotgun && (
                  <tr>
                    <td>&#128299; Shotgun</td>
                    <td>{seasonShotgun.accuracy}%</td>
                    <td class="text-muted">{seasonShotgun.kills} kills</td>
                  </tr>
                )}
                {seasonMachinegun && (
                  <tr>
                    <td>&#9881; Machine Gun</td>
                    <td>{seasonMachinegun.accuracy}%</td>
                    <td class="text-muted">{seasonMachinegun.kills} kills</td>
                  </tr>
                )}
                {seasonPlasma && (
                  <tr>
                    <td>&#128154; Plasma</td>
                    <td>{seasonPlasma.accuracy}%</td>
                    <td class="text-muted">{seasonPlasma.kills} kills</td>
                  </tr>
                )}
                {seasonGrenade && (
                  <tr>
                    <td>&#128163; Grenade</td>
                    <td>{seasonGrenade.accuracy}%</td>
                    <td class="text-muted">{seasonGrenade.kills} kills</td>
                  </tr>
                )}
              </table>
            </div>
          )}
        </div>
      </section>
    )}

    <!-- Config Download -->
    {p.configFile && (
      <section class="config-section">
        <h2>Config File</h2>
        <a href={`${base}${p.configFile.replace(/^\//, '')}`} download class="download-btn">
          Download {p.name}'s Config
