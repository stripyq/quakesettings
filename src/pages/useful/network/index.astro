    font-weight: 500;
  }

  .symptom.green {
    color: #2ecc71;
  }

  .symptom.red {
    color: #e74c3c;
  }

  /* Lagometer Diagram */
  .lagometer-diagram {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin: 1.5rem 0;
  }

