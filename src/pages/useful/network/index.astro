    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-size: 1.1rem;
    color: var(--accent-secondary, #4ecdc4);
  }

  .dns-option span {
    font-size: 0.8rem;
    color: var(--text-secondary, #888);
  }

  /* Server List */
  .server-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin: 1.5rem 0;
  }

  .server-card {
    background: var(--bg-secondary, #12121a);
    padding: 1.25rem;
    border-radius: 6px;
    text-align: center;
  }

  .server-card h4 {
    margin-bottom: 0.5rem;
    color: var(--text-primary, #e8e8f0);
  }

  .server-card code {
    display: block;
    font-size: 1rem;
    color: var(--accent-secondary, #4ecdc4);
    margin-bottom: 0.5rem;
  }

  .server-test {
    font-size: 0.75rem;
    color: var(--text-secondary, #888);
    font-family: monospace;
  }

  /* Settings Explanation Table */
  .settings-explain-table {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
  }

  .settings-explain-table td {
    padding: 0.75rem;
    border-bottom: 1px solid var(--border-color, #2a2a35);
    vertical-align: top;
  }

  .settings-explain-table td:first-child {
    width: 180px;
    white-space: nowrap;
  }

  .settings-explain-table td:first-child code {
