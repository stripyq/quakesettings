  .warning-box {
    background: rgba(231, 76, 60, 0.15);
    border: 1px solid #e74c3c;
    border-radius: 6px;
    padding: 1rem;
    margin: 1rem 0;
    font-size: 0.9rem;
  }

  .info-box {
    background: rgba(52, 152, 219, 0.15);
    border: 1px solid #3498db;
    border-radius: 6px;
    padding: 1rem;
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
  }

  /* Checklist */
  .checklist {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .checklist li {
    display: flex;
    align-items: flex-start;
    padding: 1rem 0;
    border-bottom: 1px solid var(--border-color, #2a2a35);
  }

