---
import BaseLayout from '../../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
---

<BaseLayout title="Useful Links">
  <div class="page-header">
    <h1>Useful Links</h1>
    <p>Community resources, guides, and tools for Quake Live</p>
  </div>

  <section class="link-section">
    <h2>Featured Guide</h2>
    <a href={`${base}useful/infographic/`} class="featured-link">
      View Quake Live Infographic Guide
    </a>
  </section>

  <section class="link-section">
    <h2>Community Discord Servers</h2>
    <ul class="link-list">
      <li>
        <a href="https://discord.gg/7xSpGJ5" target="_blank" rel="noopener noreferrer">
          House of Quake [EU]
        </a>
      </li>
      <li>
        <a href="https://discord.gg/KYpxv3p" target="_blank" rel="noopener noreferrer">
          CSQL [EU]
        </a>
      </li>
      <li>
        <a href="https://discord.gg/GRJUswk" target="_blank" rel="noopener noreferrer">
          Community Winter CTF [NA]
        </a>
      </li>
      <li>
        <a href="https://discord.gg/TguZhygXEy" target="_blank" rel="noopener noreferrer">
          quakectf.com (currently freeze tag) [NA]
        </a>
      </li>
    </ul>
  </section>

  <section class="link-section">
    <h2>Guides & Support</h2>
    <ul class="link-list">
      <li>
        <a href="https://steamcommunity.com/sharedfiles/filedetails/?id=3145278073" target="_blank" rel="noopener noreferrer">
          QL CTF 5v5 guide by APH3X
        </a>
      </li>
      <li>
        <a href="https://steamcommunity.com/sharedfiles/filedetails/?id=560709175" target="_blank" rel="noopener noreferrer">
          Quake Live Issues & Errors support F.A.Q By Yakumo
        </a>
      </li>
      <li>
        <a href="https://www.microsoft.com/en-us/research/project/trueskill-ranking-system/" target="_blank" rel="noopener noreferrer">
          TrueSkill Ranking System explained
        </a>
      </li>
      <li>
        <a href={`${base}useful/infographic/`}>
          Pickup players snapshot '24 infographic
        </a>
      </li>
    </ul>
  </section>

  <section class="link-section">
    <h2>Rankings & Tools</h2>
    <ul class="link-list">
      <li>
        <a href="http://88.214.20.58/ratings/ctf/" target="_blank" rel="noopener noreferrer">
          HoQ CTF rankings
        </a>
      </li>
      <li>
        <a href="http://88.214.20.58/ratings/tdm/" target="_blank" rel="noopener noreferrer">
          HoQ TDM rankings
        </a>
      </li>
      <li>
        <a href="https://iiiiins.github.io/quakerankings/" target="_blank" rel="noopener noreferrer">
          Pro QUAKE players rankings based on tournament wins by Ins
        </a>
      </li>
      <li>
        <a href="https://ql.syncore.org" target="_blank" rel="noopener noreferrer">
          Web QL server browser
        </a>
      </li>
      <li>
        <a href="https://funender.com/quake/mouse/index.html" target="_blank" rel="noopener noreferrer">
          cm/360 calculation
        </a>
      </li>
      <li>
        <a href="https://www.mouse-sensitivity.com/" target="_blank" rel="noopener noreferrer">
          Mouse Sensitivity Calculator/Converter
        </a>
      </li>
