---
import Layout from '../../layouts/Layout.astro';

const resources = [
  {
    category: 'Discord Servers',
    items: [
      { name: 'Quake Live EU Discord', url: 'https://discord.gg/quakelive', description: 'European Quake Live community' },
      { name: 'Quake Live NA Discord', url: 'https://discord.gg/quakena', description: 'North American Quake Live community' },
    ]
  },
  {
    category: 'Guides & Resources',
    items: [
      { name: 'Quake Live Wiki', url: 'https://liquipedia.net/quake/', description: 'Comprehensive Quake wiki on Liquipedia' },
      { name: 'QL Ranking', url: 'https://qlranks.com/', description: 'Quake Live player rankings and statistics' },
    ]
  },
  {
    category: 'Sensitivity Tools',
    items: [
      { name: 'Mouse Sensitivity Calculator', url: 'https://www.mouse-sensitivity.com/', description: 'Convert sensitivity between games' },
      { name: 'Aim Lab', url: 'https://aimlab.gg/', description: 'Free aim training software' },
      { name: 'Kovaak\'s', url: 'https://store.steampowered.com/app/824270/', description: 'Popular aim trainer on Steam' },
    ]
  },
  {
    category: 'Network Tools',
    items: [
      { name: 'WinMTR', url: 'https://winmtr.net/', description: 'Network diagnostic tool for Windows' },
      { name: 'PingPlotter', url: 'https://www.pingplotter.com/', description: 'Visual traceroute and ping tool' },
    ]
  },
  {
    category: 'Configuration',
    items: [
      { name: 'nQuake', url: 'https://nquake.com/', description: 'QuakeWorld package with modern defaults' },
      { name: 'Quake Live Configs', url: 'https://github.com/stripyq/quakesettings', description: 'This project - community configs repository' },
    ]
  },
];
---

<Layout title="Useful Resources">
  <h1>Useful Resources</h1>

  <p style="margin-bottom: 2rem; color: var(--text-secondary);">
    A collection of helpful tools, communities, and resources for Quake Live players.
  </p>

  {resources.map(section => (
    <section style="margin-bottom: 2.5rem;">
      <h2>{section.category}</h2>
      <div class="cards-grid">
        {section.items.map(item => (
          <a href={item.url} target="_blank" rel="noopener noreferrer" class="card" style="text-decoration: none;">
            <h3 style="color: var(--text-primary);">{item.name}</h3>
            <p>{item.description}</p>
          </a>
        ))}
      </div>
    </section>
  ))}
</Layout>
