<style>
  /* Link Sections */
  .link-section {
    margin-bottom: 3rem;
  }

  .link-section h2 {
    color: var(--accent-primary, #ff6b35);
    font-size: 1.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border-color, #2a2a3a);
  }

  /* Table Styling */
  .table-wrapper {
    overflow-x: auto;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    background: var(--card-bg, #1a1a2e);
    border-radius: 8px;
    overflow: hidden;
  }

  thead {
    background: var(--table-header-bg, #252540);
  }

  th {
    text-align: left;
    padding: 0.75rem 1rem;
    color: var(--text-secondary, #9090a0);
    font-weight: 600;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  td {
    padding: 0.75rem 1rem;
    border-top: 1px solid var(--border-color, #2a2a3a);
    color: var(--text-secondary, #9090a0);
  }

  tr:hover td {
    background: var(--table-row-hover, rgba(255, 255, 255, 0.03));
  }

  td:first-child {
    white-space: nowrap;
  }

  td a {
    color: var(--text-link, #6ea8fe);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  td a:hover {
    color: var(--accent-primary, #ff6b35);
  }

  .external-icon {
    font-size: 0.75rem;
    margin-left: 0.25rem;
    opacity: 0.7;
  }

  /* Region Badges */
  .region-badge {
    display: inline-block;
    font-size: 0.7rem;
    font-weight: 700;
    padding: 0.15rem 0.4rem;
    border-radius: 3px;
    margin-right: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .region-badge.eu {
    background: #3498db;
    color: #fff;
  }

  .region-badge.na {
    background: #e74c3c;
    color: #fff;
  }

  /* Mobile Responsive */
  @media (max-width: 640px) {
    th:last-child,
    td:last-child {
      min-width: 200px;
    }
  }
</style>
