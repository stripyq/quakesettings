<style>
  /* Featured Section */
  .featured-section {
    margin-bottom: 3rem;
  }

  .featured-section h2 {
    color: var(--accent-primary, #ff6b35);
    font-size: 1.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border-color, #2a2a3a);
  }

  .featured-card {
    display: block;
    background: var(--card-bg, #1a1a2e);
    border: 2px solid var(--accent-primary, #ff6b35);
    border-radius: 8px;
    padding: 1.5rem;
    text-decoration: none;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .featured-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(255, 107, 53, 0.2);
  }

  .featured-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .featured-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary, #fff);
  }

  .new-badge {
    background: var(--accent-primary, #ff6b35);
    color: #fff;
    font-size: 0.7rem;
    font-weight: 700;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .featured-description {
    color: var(--text-secondary, #9090a0);
    font-size: 1rem;
    line-height: 1.5;
    margin: 0 0 1rem 0;
  }

  .featured-button {
    display: inline-block;
    color: var(--accent-primary, #ff6b35);
    font-weight: 600;
    font-size: 0.95rem;
  }

  /* Link Sections */
  .link-section {
    margin-bottom: 3rem;
  }

  .link-section h2 {
    color: var(--accent-primary, #ff6b35);
    font-size: 1.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border-color, #2a2a3a);
  }

  /* Table Styling */
  .table-wrapper {
    overflow-x: auto;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    background: var(--card-bg, #1a1a2e);
    border-radius: 8px;
    overflow: hidden;
  }

  thead {
    background: var(--table-header-bg, #252540);
  }

  th {
    text-align: left;
    padding: 0.75rem 1rem;
    color: var(--text-secondary, #9090a0);
    font-weight: 600;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  td {
    padding: 0.75rem 1rem;
    border-top: 1px solid var(--border-color, #2a2a3a);
    color: var(--text-secondary, #9090a0);
  }

  tr:hover td {
    background: var(--table-row-hover, rgba(255, 255, 255, 0.03));
  }

  td:first-child {
    white-space: nowrap;
  }

  td a {
    color: var(--text-link, #6ea8fe);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  td a:hover {
    color: var(--accent-primary, #ff6b35);
  }

  .external-icon {
    font-size: 0.75rem;
    margin-left: 0.25rem;
    opacity: 0.7;
  }

  /* Mobile Responsive */
  @media (max-width: 640px) {
    th:last-child,
    td:last-child {
      min-width: 200px;
    }

    .featured-card {
      padding: 1rem;
    }

    .featured-title {
      font-size: 1.1rem;
    }

    .featured-description {
      font-size: 0.9rem;
    }
  }
</style>
