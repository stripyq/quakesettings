---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;

// Get all players to count hardware usage
const players = await getCollection('players');

// Create mouse usage map
const mouseUsageMap = new Map<string, number>();
players.forEach(p => {
  const mouseId = p.data.mouse;
  if (mouseId) {
    mouseUsageMap.set(mouseId, (mouseUsageMap.get(mouseId) || 0) + 1);
  }
});

// Map recommendation names to hardware slugs
const mouseSlugMap: Record<string, string> = {
  "VXE R1 Pro": "vxe-r1-pro",
  "Endgame Gear OP1 8K": "endgame-gear-op1-8k",
  "Pulsar Xlite V3 Crazy Light": "pulsar-xlite-v3-crazylight-medium",
  "G-Wolves HTS Ultra": "g-wolves-hts-ultra",
  "Logitech G Pro X Superlight 2": "logitech-g-pro-x-superlight-2",
  "Ninjutso Sora V2": "ninjutso-sora-v2",
  "VAXEE NP-01S": "vaxee-np-01s-wireless",
  "VAXEE XE V2": "vaxee-xe-v2",
  "Incott G23 V2": "incott-g23-v2",
  "RAW Leviathan V4": "rawm-leviathan-v4",
  "ATK X1 / F1 V2": "atk-x1-v2-ultimate",
  "MCHOSE A5": "mchose-a5",
  "Asus ROG Harpe Ace 2": "asus-rog-harpe-ace-2",
};

function getPlayerCount(name: string): number {
  const slug = mouseSlugMap[name];
  if (!slug) return 0;
  return mouseUsageMap.get(slug) || 0;
}

const mouseData = [
  { mouse: "VXE R1 Pro", price: "$", dl: true, tl: true, bz: true, ju: true },
  { mouse: "Endgame Gear OP1 8K", price: "$$", dl: true, tl: true, bz: false, ju: true },
  { mouse: "Pulsar Xlite V3 Crazy Light", price: "$$", dl: false, tl: true, bz: true, ju: false },
  { mouse: "G-Wolves HTS Ultra", price: "$$", dl: false, tl: true, bz: true, ju: false },
  { mouse: "Logitech G Pro X Superlight 2", price: "$$$", dl: false, tl: false, bz: true, ju: true },
  { mouse: "Ninjutso Sora V2", price: "$$", dl: false, tl: true, bz: false, ju: true },
  { mouse: "VAXEE NP-01S", price: "$$", dl: false, tl: true, bz: false, ju: false },
  { mouse: "VAXEE XE V2", price: "$$", dl: false, tl: true, bz: false, ju: false },
  { mouse: "Incott G23 V2", price: "$", dl: false, tl: false, bz: false, ju: true },
  { mouse: "RAW Leviathan V4", price: "$$", dl: false, tl: false, bz: false, ju: true },
  { mouse: "ATK X1 / F1 V2", price: "$", dl: false, tl: true, bz: false, ju: true },
  { mouse: "MCHOSE A5", price: "$", dl: false, tl: false, bz: false, ju: true },
  { mouse: "Asus ROG Harpe Ace 2", price: "$$$", dl: false, tl: true, bz: false, ju: false },
];

// Sort by reviewer count, then by player count
const sortedMice = mouseData.sort((a, b) => {
  const aReviewers = (a.dl ? 1 : 0) + (a.tl ? 1 : 0) + (a.bz ? 1 : 0) + (a.ju ? 1 : 0);
  const bReviewers = (b.dl ? 1 : 0) + (b.tl ? 1 : 0) + (b.bz ? 1 : 0) + (b.ju ? 1 : 0);
  if (bReviewers !== aReviewers) return bReviewers - aReviewers;
  return getPlayerCount(b.mouse) - getPlayerCount(a.mouse);
});
---

<BaseLayout title="Mice Recommendations">
  <div class="page-header">
    <h1>Gaming Mice Recommendations</h1>
    <p>Recommended mice from top reviewers (2025)</p>
  </div>

  <div class="reviewer-legend">
    <span class="legend-item"><span class="badge dl">DL</span> Diamond Lobby</span>
    <span class="legend-item"><span class="badge tl">TL</span> Techless</span>
    <span class="legend-item"><span class="badge bz">BZ</span> Boardzy</span>
    <span class="legend-item"><span class="badge ju">JU</span> jakeu</span>
  </div>

  <div class="price-legend">
    <span>$ = Budget</span>
    <span>$$ = Mid-range</span>
    <span>$$$ = Premium</span>
  </div>

  <div class="table-container">
    <table class="rec-table">
      <thead>
        <tr>
          <th>Mouse</th>
          <th>Price</th>
          <th>DL</th>
          <th>TL</th>
          <th>BZ</th>
          <th>JU</th>
          <th>Players</th>
        </tr>
      </thead>
      <tbody>
        {sortedMice.map(m => {
          const playerCount = getPlayerCount(m.mouse);
          const slug = mouseSlugMap[m.mouse];
          return (
            <tr>
              <td class="mouse-name">{m.mouse}</td>
              <td class="price">{m.price}</td>
              <td class="center">{m.dl ? '✓' : ''}</td>
              <td class="center">{m.tl ? '✓' : ''}</td>
              <td class="center">{m.bz ? '✓' : ''}</td>
              <td class="center">{m.ju ? '✓' : ''}</td>
              <td class="center players">
                {playerCount > 0 ? (
                  <a href={`${base}hardware/#mice`} class="player-link">{playerCount}</a>
                ) : '—'}
              </td>
            </tr>
          );
        })}
      </tbody>
    </table>
  </div>

  <div class="back-link">
    <a href={`${base}recommendations/`}>← Back to Recommendations</a>
  </div>
</BaseLayout>

<style>
  .reviewer-legend {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
    padding: 1rem;
    background: var(--bg-secondary, #12121a);
    border-radius: 6px;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
  }

  .badge {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-weight: 600;
    font-size: 0.75rem;
  }

  .badge.dl { background: #4a9eff; color: #fff; }
  .badge.tl { background: #ff6b6b; color: #fff; }
  .badge.bz { background: #ffd93d; color: #000; }
  .badge.ju { background: #6bcb77; color: #000; }

  .price-legend {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary, #888);
  }

  .table-container {
    overflow-x: auto;
  }

  .rec-table {
    width: 100%;
    border-collapse: collapse;
  }

  .rec-table th,
  .rec-table td {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid var(--border-color, #2a2a3a);
  }

  .rec-table th {
    background: var(--bg-secondary, #12121a);
    font-weight: 600;
    color: var(--text-secondary, #888);
    text-transform: uppercase;
    font-size: 0.75rem;
  }

  .rec-table tbody tr:hover {
    background: var(--bg-secondary, #12121a);
  }

  .mouse-name {
    font-weight: 500;
    color: var(--text-primary, #fff);
  }

  .price {
    font-family: monospace;
    color: var(--text-secondary, #888);
  }

  .center {
    text-align: center;
    color: var(--accent-primary, #ff6b35);
  }

  .players {
    font-weight: 600;
  }

  .player-link {
    color: var(--accent-primary, #ff6b35);
    text-decoration: underline;
    text-decoration-style: dotted;
    text-underline-offset: 2px;
  }

  .player-link:hover {
    color: var(--accent-secondary, #4ecdc4);
  }

  .back-link {
    margin-top: 2rem;
  }

  .back-link a {
    color: var(--accent-primary, #ff6b35);
    text-decoration: none;
  }

  .back-link a:hover {
    text-decoration: underline;
  }
</style>
