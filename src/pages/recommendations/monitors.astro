---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const monitors = await getCollection('monitors');

const sortedMonitors = monitors.sort((a, b) => {
  const brandCompare = a.data.brand.localeCompare(b.data.brand);
  if (brandCompare !== 0) return brandCompare;
  return a.data.name.localeCompare(b.data.name);
});

const players = await getCollection('players');
const usageCount = new Map<string, number>();
players.forEach(player => {
  if (player.data.monitor) {
    const id = player.data.monitor.id;
    usageCount.set(id, (usageCount.get(id) || 0) + 1);
  }
});

const topMonitors = [...usageCount.entries()]
  .sort((a, b) => b[1] - a[1])
  .slice(0, 10)
  .map(([id, count]) => {
    const item = monitors.find(m => m.id === id);
    return { ...item?.data, id, count };
  });
---

<Layout title="Monitor Recommendations">
  <h1>Gaming Monitors</h1>

  <a href="/quakesettings/recommendations/" style="display: inline-block; margin-bottom: 1.5rem; color: var(--text-secondary);">
    &larr; Back to Recommendations
  </a>

  <section style="margin-bottom: 3rem;">
    <h2>Most Popular in Community</h2>
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Rank</th>
            <th>Monitor</th>
            <th>Size</th>
            <th>Refresh Rate</th>
            <th>Players</th>
          </tr>
        </thead>
        <tbody>
          {topMonitors.map((item, i) => (
            <tr>
              <td>#{i + 1}</td>
              <td>{item.name}</td>
              <td>{item.size || '-'}</td>
              <td>{item.refreshRate || '-'}</td>
              <td><span class="badge">{item.count}</span></td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </section>

  <section>
    <h2>All Monitors ({monitors.length})</h2>
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Brand</th>
            <th>Size</th>
            <th>Refresh Rate</th>
            <th>Panel</th>
          </tr>
        </thead>
        <tbody>
          {sortedMonitors.map(item => (
            <tr>
              <td>{item.data.name}</td>
              <td>{item.data.brand}</td>
              <td>{item.data.size || '-'}</td>
              <td>{item.data.refreshRate || '-'}</td>
              <td>{item.data.panel || '-'}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </section>
</Layout>
