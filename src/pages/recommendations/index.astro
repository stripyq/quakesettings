---
import Layout from '../../layouts/Layout.astro';

const categories = [
  {
    name: 'Mice',
    slug: 'mice',
    description: 'Recommended gaming mice for competitive FPS',
  },
  {
    name: 'Mousepads',
    slug: 'mousepads',
    description: 'Top mousepads for control and speed',
  },
  {
    name: 'Keyboards',
    slug: 'keyboards',
    description: 'Mechanical keyboards for gaming',
  },
  {
    name: 'Monitors',
    slug: 'monitors',
    description: 'High refresh rate monitors for competitive play',
  },
  {
    name: 'Headphones',
    slug: 'headphones',
    description: 'Audio gear for positional awareness',
  },
];
---

<Layout title="Gear Recommendations">
  <h1>Gear Recommendations</h1>

  <p style="margin-bottom: 2rem; color: var(--text-secondary);">
    Curated recommendations for competitive FPS gaming peripherals. These picks are based on community feedback and reviewer endorsements.
  </p>

  <div class="cards-grid">
    {categories.map(category => (
      <a href={`/quakesettings/recommendations/${category.slug}/`} class="card" style="text-decoration: none;">
        <h3 style="color: var(--text-primary);">{category.name}</h3>
        <p>{category.description}</p>
      </a>
    ))}
  </div>
</Layout>
