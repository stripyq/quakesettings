---
import BaseLayout from '../../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;

const keyboardData = [
  { name: "Wooting 60HE+", size: "60%", switches: "Hall Effect", features: "Rapid Trigger", recommended: ["Optimum Tech", "Techless"] },
  { name: "Wooting 80HE", size: "TKL", switches: "Hall Effect", features: "Rapid Trigger", recommended: ["Optimum Tech"] },
  { name: "Razer Huntsman V3 Pro", size: "Full/TKL", switches: "Optical HE", features: "Rapid Trigger", recommended: ["Hardware Canucks"] },
  { name: "SteelSeries Apex Pro", size: "Full/TKL", switches: "OmniPoint HE", features: "Adjustable actuation", recommended: ["Popular choice"] },
  { name: "Keychron Q1 Pro", size: "75%", switches: "Gateron G Pro", features: "QMK/VIA", recommended: ["Budget enthusiast"] },
  { name: "Leopold FC750R", size: "TKL", switches: "Cherry MX", features: "Build quality", recommended: ["Classic choice"] },
  { name: "Ducky One 3", size: "Various", switches: "Cherry MX", features: "Hot-swap", recommended: ["Reliable"] },
  { name: "DrunkDeer A75", size: "75%", switches: "Hall Effect", features: "Budget RT", recommended: ["Budget RT option"] },
  { name: "NuPhy Field75 HE", size: "75%", switches: "Hall Effect", features: "Rapid Trigger", recommended: ["Techless"] },
];
---

<BaseLayout title="Keyboard Recommendations">
  <div class="page-header">
    <h1>Keyboard Recommendations</h1>
    <p>Mechanical keyboards and switches for gaming</p>
  </div>

  <div class="table-container">
    <table class="rec-table">
      <thead>
        <tr>
          <th>Keyboard</th>
          <th>Size</th>
          <th>Switches</th>
          <th>Features</th>
          <th>Recommended By</th>
        </tr>
      </thead>
      <tbody>
        {keyboardData.map(k => (
          <tr>
            <td class="kb-name">{k.name}</td>
            <td>{k.size}</td>
            <td>{k.switches}</td>
            <td>{k.features}</td>
            <td>{k.recommended.join(', ')}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>

  <div class="back-link">
    <a href={`${base}recommendations/`}>‚Üê Back to Recommendations</a>
  </div>
</BaseLayout>

<style>
  .table-container { overflow-x: auto; }
  .rec-table { width: 100%; border-collapse: collapse; }
  .rec-table th, .rec-table td { padding: 0.75rem; text-align: left; border-bottom: 1px solid var(--border-color, #2a2a3a); }
  .rec-table th { background: var(--bg-secondary, #12121a); font-weight: 600; color: var(--text-secondary, #888); text-transform: uppercase; font-size: 0.75rem; }
  .rec-table tbody tr:hover { background: var(--bg-secondary, #12121a); }
  .kb-name { font-weight: 500; color: var(--accent-primary, #ff6b35); }
  .back-link { margin-top: 2rem; }
  .back-link a { color: var(--accent-primary, #ff6b35); text-decoration: none; }
  .back-link a:hover { text-decoration: underline; }
</style>
