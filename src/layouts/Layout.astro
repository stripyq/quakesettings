---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Quake Live player settings database - mice, monitors, keyboards, sensitivity settings and more.' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <link rel="icon" type="image/svg+xml" href="/quakesettings/favicon.svg" />
  <title>{title} | QL Gear & Settings</title>
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
</head>
<body>
  <header class="header">
    <div class="container header-content">
      <a href="/quakesettings/" class="logo">QL Gear & Settings</a>
      <nav class="nav">
        <a href="/quakesettings/" class:list={[{ active: currentPath === '/quakesettings/' || currentPath === '/quakesettings' }]}>List</a>
        <a href="/quakesettings/useful/" class:list={[{ active: currentPath.startsWith('/quakesettings/useful') }]}>Useful</a>
        <a href="/quakesettings/recommendations/" class:list={[{ active: currentPath.startsWith('/quakesettings/recommendations') }]}>Recommendations</a>
        <a href="/quakesettings/admin/" target="_blank">Admin</a>
      </nav>
    </div>
  </header>

  <main class="container">
    <slot />
  </main>

  <footer class="footer">
    <div class="container">
      <p>Quake Live Community Gear & Settings Database</p>
      <p>Contribute via <a href="https://github.com/stripyq/quakesettings">GitHub</a> or use the <a href="/quakesettings/admin/">CMS</a></p>
    </div>
  </footer>
  <script>
    if (window.netlifyIdentity) {
      // Check for authentication tokens in URL hash
      const hash = window.location.hash;
      const hasAuthToken = hash.includes('invite_token') ||
                           hash.includes('recovery_token') ||
                           hash.includes('confirmation_token');

      window.netlifyIdentity.on("init", user => {
        // If there's an auth token in the URL, open the identity widget
        if (hasAuthToken) {
          window.netlifyIdentity.open();
        }

        // Handle login redirect to admin
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>
</body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
